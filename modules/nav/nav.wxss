/* modules/nav/nav.wxss */

.nav-area {
   width: 0;
   height: 0;
   left: 0;
   top: 0;
}

.nav-bg {
   position: fixed;
   width: 100%;
   height: 100%;
   left: 0;
   top: 0;
   background-color: rgba(0, 0, 0, 0.3);
   transform-style: preserve-3d;
}

.movable-area {
   position: absolute;
   width: 210px;
   height: 100%;
   top: 0;
   left: -200px;
   padding-right: 10px;
   will-change: transform;
   backface-visibility: hidden;
}

.movable-view {
   width: 100%;
   height: 100%;
   background-color: #302e2f;
   box-sizing: border-box;
   overflow-y: hidden;
}

.user {
   padding: 20px;
   color: white;
   display: flex;
   align-items: center;
}

.user image {
   width: 50px;
   height: 50px;
   border-radius: 50%;
   margin-right: 10px;
}

.userName {
   font-size: 18px;
   display: block;
}

.roleName {
   opacity: 0.6;
   display: block;
}

.menu .item {
   display: flex;
   align-items: center;
   box-sizing: border-box;
   padding: 20px;
   color: white;
   font-size: 17px;
   opacity: 0.6;
}

.menu .item.current {
   opacity: 1;
   background-color: rgba(0, 0, 0, 0.5);
}

.menu image {
   width: 24px;
   margin-right: 20px;
}
