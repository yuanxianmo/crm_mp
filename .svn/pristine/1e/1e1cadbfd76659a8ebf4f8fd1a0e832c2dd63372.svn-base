/**app.wxss**/

page {
   min-height: 100%;
   font-size: 14px;
   --blue: #4484f3;
}

view, input, button {
   box-sizing: border-box;
   border: none;
}

button[disabled]::after {
   display: none;
}

nav {
   position: fixed;
   left: 0;
   top: 0;
   width: 0;
   height: 100%;
}

::-webkit-scrollbar {
   display: none;
}
