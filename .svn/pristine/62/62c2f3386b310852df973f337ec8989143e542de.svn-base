/* modules/nav/nav.wxss */

.nav-area {
   position: fixed;
   width: 100%;
   height: 100%;
   left: 0;
   top: 0;
   background-color: rgba(0, 0, 0, 0.3);
}

movable-area {
   position: absolute;
   width: 400px;
   height: 100%;
   top: 0;
   left: -200px;
}

movable-view {
   width: 210px;
   height: 100%;
   background-color: #302e2f;
   padding-right: 10px;
   padding-left: 10px;
   background-clip: content-box;
   box-sizing: border-box;
   overflow-y: auto;
}

.user {
   padding: 20px;
   color: white;
}

.user image {
   width: 100px;
   height: 100px;
   border-radius: 50%;
   margin-bottom: 10px;
}

.userName {
   font-size: 18px;
   display: block;
}

.roleName {
   opacity: 0.6;
   display: block;
}

.menu .item {
   display: flex;
   align-items: center;
   box-sizing: border-box;
   padding: 15px;
   color: white;
   font-size: 16px;
   opacity: 0.6;
}

.menu .item.current {
   opacity: 1;
   background-color: rgba(0, 0, 0, 0.5);
}

.menu image {
   width: 24px;
   margin-right: 10px;
}
