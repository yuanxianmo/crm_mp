/* pages/index/index.wxss */

.home .li {
   display: flex;
   align-items: center;
   padding: 15px;
   border-bottom: 1px solid #eee;
}

.home image {
   width: 60px;
   height: 60px;
   border-radius: 50%;
   margin-right: 15px;
   flex-shrink: 0;
}

.home .text {
   flex: auto;
   overflow: hidden;
   margin-right: 10px;
}

.home .text .above {
   display: flex;
   justify-content: space-between;
   margin-bottom: 5px;
}

.home .text .time {
   color: #888;
}

.home .title {
   display: block;
   color: #222;
}

.home .content {
   display: block;
   overflow: hidden;
   text-overflow: ellipsis;
   color: #888;
}
